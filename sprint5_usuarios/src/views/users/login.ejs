<body>
    <%- include('../includes/nav') %>
    Login
    <form action="/users/access" method="post">
        <label for="email"><input type="email" name="email" id="email"> </label>
        <label for="password"><input type="password" name="password" id="password"></label>
        <label for="remember">Remember me<input type="checkbox" name="remember"></label>
        <button type="submit">Access</button>
    </form>
    <% if (locals.errors && errors.email) {%>
        <p>  <%= errors.email.msg %> </p>
        <% } %>
        <% if (locals.errors && errors.password) {%>
        <p>  <%= errors.password.msg %> </p>
        <% } %>
